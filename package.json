{
	"name": "@blueeast/bluerain",
	"description": "ðŸš€ A modular, pluggable and cross platform app framework.",
	"author": "BlueEast Team <code@blueeast.com>",
	"version": "4.0.0-aplha.1",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"module": "dist/index.js",
	"repository": "https://github.com/BlueEastCode/bluerain",
	"license": "MIT",
	"keywords": [],
	"scripts": {
		"start": "DEBUG=*,-follow-redirects ts-node ./src/example",
		"clean": "rimraf coverage dist tmp",
		"watch": "tsc -w -p tsconfig.json",
		"watch:test": "jest --watch",
		"lint": "tslint -t stylish --project \"tsconfig.json\"",
		"test:only": "jest --coverage",
		"info": "npm-scripts-info",
		"build": "run-s clean && run-p build:*",
		"build:main": "tsc -p tsconfig.json",
		"fix": "run-s fix:*",
		"fix:prettier": "prettier \"src/**/*.ts\" --write",
		"fix:tslint": "tslint --fix --project .",
		"test": "run-s build test:*",
		"test:lint": "npm run lint",
		"test:prettier": "prettier \"src/**/*.ts\" --list-different",
		"commit": "git-cz",
		"cov": "run-s build test:unit cov:html && opn coverage/index.html",
		"cov:html": "nyc report --reporter=html",
		"cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
		"cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
		"doc": "run-s doc:html && opn dist/docs/index.html",
		"doc:html": "typedoc src/ --target ES6 --mode file --out dist/docs",
		"doc:json": "typedoc src/ --target ES6 --mode file --json dist/docs/typedoc.json",
		"doc:publish": "gh-pages -m \"[ci skip] Updates\" -d dist/docs",
		"version": "standard-version",
		"reset": "git clean -dfx && git reset --hard && npm i",
		"all": "run-s reset test cov:check doc:html",
		"prepare-release": "run-s all version doc:publish",
		"storybook:start": "bluerain storybook:start"
	},
	"scripts-info": {
		"info": "Display information about the package scripts",
		"build": "Clean and rebuild the project",
		"fix": "Try to automatically fix any linting problems",
		"test": "Lint and unit test the project",
		"watch": "Watch and rebuild the project on save",
		"cov": "Rebuild, run tests, then create and open the coverage report",
		"doc": "Generate HTML API documentation and open it in a browser",
		"doc:json": "Generate API documentation in typedoc JSON format",
		"version": "Bump package.json version, update CHANGELOG.md, tag release",
		"reset": "Delete all untracked files and reset the repo to the last commit",
		"prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
	},
	"engines": {
		"node": ">=8.9"
	},
	"dependencies": {
		"deepmerge": "^2.1.1",
		"lodash.flowright": "^3.5.0",
		"lodash.isfunction": "^3.0.9",
		"lodash.isnil": "^4.0.0",
		"lodash.isstring": "^4.0.1",
		"lodash.kebabcase": "^4.1.1",
		"react-loadable": "^5.5.0",
		"tslib": "^1.9.3"
	},
	"devDependencies": {
		"@blueeast/bluerain-cli-essentials": "^4.0.0-beta.2",
		"@blueeast/bluerain-storybook-addon": "^1.1.4",
		"@blueeast/tslint-config-blueeast": "^0.5.6",
		"@storybook/addon-actions": "^3.4.11",
		"@storybook/addon-console": "^1.0.4",
		"@storybook/addon-links": "^3.4.11",
		"@storybook/react": "^3.4.11",
		"@types/deepmerge": "^2.1.0",
		"@types/jest": "^23.1.6",
		"@types/lodash.flowright": "^3.5.4",
		"@types/lodash.isfunction": "^3.0.4",
		"@types/lodash.isnil": "^4.0.4",
		"@types/lodash.isstring": "^4.0.4",
		"@types/lodash.kebabcase": "^4.1.4",
		"@types/node": "^10.11.0",
		"@types/react": "^16.4.13",
		"@types/react-loadable": "^5.4.1",
		"@types/react-test-renderer": "^16.0.2",
		"@types/storybook__react": "^3.0.9",
		"babel-core": "^6.26.3",
		"babel-preset-react-native": "^4.0.1",
		"codecov": "^3.0.2",
		"commitizen": "^2.10.1",
		"cz-conventional-changelog": "^2.1.0",
		"gh-pages": "^1.2.0",
		"jest": "^23.4.1",
		"npm-run-all": "^4.1.3",
		"opn-cli": "^3.1.0",
		"prettier": "^1.13.4",
		"react": "^16.3.1",
		"react-dom": "^16.5.2",
		"react-native": "^0.57.1",
		"react-test-renderer": "^16.5.2",
		"schedule": "0.4.0",
		"standard-version": "^4.4.0",
		"trash-cli": "^1.4.0",
		"ts-jest": "^23.10.0",
		"ts-node": "^7.0.0",
		"tslint": "^5.11.0",
		"typedoc": "^0.12.0",
		"typescript": "3.0.3"
	},
	"peerDependencies": {
		"react": "^16.*"
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"trailingComma": "es5"
	}
}
