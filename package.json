{
  "name": "@bluebase/core",
  "description": "ðŸš€ A modular, pluggable and cross platform app framework.",
  "author": "BlueEast Team <code@blueeast.com>",
  "version": "4.0.0-aplha.10",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "repository": "https://github.com/BlueBaseJS/core",
  "license": "MIT",
  "keywords": [],
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "src",
        "bluebase/storybook-native"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "bluebase/storybook-native/storybook/storyLoader.js"
    }
  },
  "size-limit": [
    {
      "limit": "20 KB",
      "webpack": false,
      "path": "dist/**/!(*.test).js"
    }
  ],
  "scripts": {
    "start": "yarn run storybook",
    "clean": "rimraf coverage dist tmp",
    "watch": "tsc -w -p tsconfig.json",
    "watch:test": "jest --watch",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "info": "npm-scripts-info",
    "build": "run-s clean && run-p build:* && cp -r ./dist/src/* ./dist && rm -r ./dist/src",
    "build:main": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:only": "jest --coverage",
    "test:lint": "npm run lint",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "commit": "git-cz",
    "report-coverage": "codecov",
    "doc": "run-s doc:html && opn docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "all": "run-s reset test cov:check doc:html",
    "prepare-release": "run-s all version doc:publish",
    "size": "size-limit",
    "storybook:start": "bluerain storybook:start",
    "storybook-native": "bluebase storybook-native:start",
    "storybook": "start-storybook -p 6006 --config-dir ./bluebase/storybook/configs",
    "build-storybook": "build-storybook",
    "web:start": "bluebase web:start",
    "expo:start": "bluebase expo:start"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "deepmerge": "^3.2.0",
    "expo": "^31.0.6",
    "hoist-non-react-statics": "^3.3.0",
    "lodash.flowright": "^3.5.0",
    "lodash.isboolean": "^3.0.3",
    "lodash.isfunction": "^3.0.9",
    "lodash.isnil": "^4.0.0",
    "lodash.isstring": "^4.0.1",
    "lodash.kebabcase": "^4.1.1",
    "react-loadable": "^5.5.0",
    "react-native": "^0.57.8",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@bluebase/storybook-addon": "^3.0.0",
    "@blueeast/bluerain-cli-essentials": "^4.0.0-beta.2",
    "@blueeast/tslint-config-blueeast": "^0.7.0",
    "@storybook/addon-actions": "^4.1.2",
    "@storybook/addon-console": "^1.0.8",
    "@storybook/addon-info": "^4.1.3",
    "@storybook/addon-links": "^4.1.2",
    "@storybook/addon-viewport": "^4.1.2",
    "@storybook/addons": "^4.1.2",
    "@storybook/react": "^4.1.2",
    "@storybook/react-native": "^4.1.4",
    "@types/deepmerge": "^2.2.0",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-async-helpers": "^0.9.1",
    "@types/hoist-non-react-statics": "^3.3.0",
    "@types/jest": "^24.0.9",
    "@types/lodash.flowright": "^3.5.6",
    "@types/lodash.isboolean": "^3.0.6",
    "@types/lodash.isfunction": "^3.0.6",
    "@types/lodash.isnil": "^4.0.6",
    "@types/lodash.isstring": "^4.0.6",
    "@types/lodash.kebabcase": "^4.1.6",
    "@types/react": "^16.4.18",
    "@types/react-loadable": "^5.5.0",
    "@types/react-native": "^0.57.7",
    "@types/react-test-renderer": "^16.8.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.3.1",
    "babel-loader": "^8.0.5",
    "babel-preset-expo": "^5.0.0",
    "codecov": "^3.2.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-async-helpers": "^0.9.1",
    "gh-pages": "^2.0.1",
    "jest": "^24.3.1",
    "jest-enzyme": "^7.0.2",
    "jsdom": "^13.2.0",
    "npm-run-all": "^4.1.3",
    "opn-cli": "^4.0.0",
    "prettier": "^1.16.4",
    "react": "^16.7.0",
    "react-art": "^16.6.3",
    "react-dom": "^16.7.0",
    "react-native-storybook-loader": "^1.8.0",
    "react-native-typescript-transformer": "^1.2.12",
    "react-native-web": "^0.10.1",
    "react-test-renderer": "^16.8.4",
    "regenerator-runtime": "^0.13.1",
    "schedule": "^0.4.0",
    "size-limit": "^0.21.1",
    "standard-version": "^5.0.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.13.1",
    "typedoc": "^0.14.2",
    "typescript": "3.3.3333"
  },
  "peerDependencies": {
    "react": "^16.*"
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "es5"
  }
}
