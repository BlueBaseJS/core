{
  "name": "@blueeast/bluerain-os",
  "version": "0.0.0-development",
  "description": "A browser based OS, made with React JS",
  "keywords": [],
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "typings": "types/src/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "BlueEast Team <code@blueeast.com>",
  "release": {
    "branch": "master",
    "dryRun": false,
    "debug": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BlueEastCode/bluerain-os.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "storybook-native": "storybook start -p 7007",
    "prestorybook-native": "rnstl",
    "build-storybook": "build-storybook",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'src/**/*.tsx'",
    "prebuild": "rimraf dist",
    "build": "tsc && babel -D compiled --out-dir dist --copy-files",
    "postbuild": "typedoc --out dist/docs --target es6 --theme minimal src && rimraf compiled",
    "start": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "docs": "documentation readme src/** --section=API",
    "report-coverage": "cat ./coverage/lcov.info | coveralls && codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --use-tabs --single-quote",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    },
    "react-native-storybook-loader": {
      "searchDir": [
        "./src"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./storybook/storyLoader.tsx"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 71,
        "functions": 78,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverage": true,
    "mapCoverage": true
  },
  "bundlesize": [
    {
      "path": "./dist/bluerain-os.es5.js",
      "maxSize": "18 kB"
    }
  ],
  "dependencies": {
    "@blueeast/bluerain-ui-interfaces": "^2.0.2",
    "deepmerge": "^2.0.1",
    "eventemitter3": "^2.0.3",
    "harmony-reflect": "^1.5.1",
    "immutable": "^3.8.2",
    "lodash.flowright": "^3.5.0",
    "lodash.get": "^4.4.2",
    "lodash.isboolean": "^3.0.3",
    "lodash.isnil": "^4.0.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.set": "^4.3.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom-factories": "^1.0.2",
    "react-native-browser-polyfill": "^0.1.2",
    "recompose": "^0.25.0"
  },
  "devDependencies": {
    "@blueeast/bluerain-platform-reactxp": "^2.0.0",
    "@blueeast/tslint-config-blueeast": "^0.5.5",
    "@storybook/addon-actions": "^3.3.12",
    "@storybook/addon-links": "^3.3.12",
    "@storybook/react": "^3.3.12",
    "@storybook/react-native": "^3.3.12",
    "@types/deepmerge": "^1.3.3",
    "@types/lodash.flowright": "^3.5.3",
    "@types/lodash.get": "^4.4.3",
    "@types/lodash.isboolean": "^3.0.3",
    "@types/lodash.isnil": "^4.0.3",
    "@types/lodash.kebabcase": "^4.1.3",
    "@types/lodash.merge": "^4.6.3",
    "@types/lodash.set": "^4.3.3",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.37",
    "@types/react-dom-factories": "^1.0.0",
    "@types/recompose": "^0.24.5",
    "@types/storybook__react": "^3.0.6",
    "awesome-typescript-loader": "^3.4.1",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bundlesize": "^0.15.3",
    "codecov": "^2.3.1",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.0",
    "jest": "^21.0.0",
    "jest-cli": "^21.2.1",
    "lint-staged": "^4.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.2.0",
    "react-native-storybook-loader": "^1.7.0",
    "react-test-render": "^1.1.1",
    "redux-mock-store": "^1.3.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^13.3.0",
    "travis-deploy-once": "^4.3.4",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "typedoc": "^0.10.0",
    "typescript": "^2.5.3",
    "validate-commit-msg": "^2.12.2"
  }
}
