{
	"compilerOptions": {
		"moduleResolution": "node",
		"types": ["node"],
		"target": "es5",
		"module":"es2015",
		"lib": ["es2015", "es2016", "es2017", "dom", "esnext.asynciterable"],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"declarationDir": "types",
		"outDir": "compiled",
		"jsx": "react", // process JSX
		"typeRoots": [
			"node_modules/@types"
		],
		"baseUrl": ".",
		"paths": {
			"*": [ "./typings/*" ]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"storybook",
		"**/*.stories.ts",
		"**/*.test.ts"
	]
}
